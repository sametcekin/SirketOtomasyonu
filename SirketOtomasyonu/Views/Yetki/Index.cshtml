@model IEnumerable<YetkiViewModel>

@{
    ViewData["Title"] = "Yetkiler";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Yetki Listesi</h1>
</div>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <div class="row justify-content-center">
                <div class="col-sm-11">
                    <input type="text" name="SearchString" class="form-control" value="@ViewData["CurrentFilter"]" placeholder="Yetki arama" />
                </div>
                <div class="col-sm-1">
                    <button type="submit" class="btn btn-success  btn-circle btn-sm"><i class='fas fa-search'></i></button>
                    <a asp-action="Index" class="btn btn-warning btn-circle btn-sm"><i class='fas fa-sync'></i></a>
                    <a onclick="showInPopup('@Url.Action("Create","Yetki",null,Context.Request.Scheme)','Yetki Ekle')" class="btn btn-primary  btn-circle btn-sm">
                        <i class="fas fa-plus fa-sm"></i>
                    </a>
                </div>
            </div>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Adi)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit","Yetki",new {id=item.Id},Context.Request.Scheme)','Yetki Güncelle')" class="btn btn-info text-white">Güncelle</a>
                    <a onclick="showInPopup('@Url.Action("Delete","Yetki",new {id=item.Id},Context.Request.Scheme)','Yetki Sil')" class="btn btn-danger text-white">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
