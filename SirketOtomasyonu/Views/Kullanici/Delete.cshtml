@model SirketOtomasyonu.Data.Entities.Kullanici

@{
    Layout =null;
}

<div class="row">
    <div class="text-center m-3">
        <b>@Html.DisplayFor(model => model.KullaniciAdi)</b> kullanıcısını silmek istediğinize emin misiniz?
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
