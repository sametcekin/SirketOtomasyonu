@using SirketOtomasyonu.Models.Personel;
@model IEnumerable<PersonelViewModel>

@{
    ViewData["Title"] = "Personeller";
}


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Personel Listesi</h1>
</div>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <div class="row justify-content-center">
                <div class="col-sm-11">
                    <input type="text" name="SearchString" class="form-control" value="@ViewData["CurrentFilter"]" placeholder="Personel arama" />
                </div>
                <div class="col-sm-1">
                    <button type="submit" class="btn btn-success  btn-circle btn-sm"><i class='fas fa-search'></i></button>
                    <a asp-action="Index" class="btn btn-warning btn-circle btn-sm"><i class='fas fa-sync'></i></a>
                    <a asp-action="Create" class="btn btn-primary  btn-circle btn-sm">
                        <i class="fas fa-plus fa-sm"></i>
                    </a>
                </div>
            </div>
        </p>
    </div>
</form>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GirisTarihi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-circle btn-lg">
                        <img src="@("~/img/"+item.Resim)" asp-append-version="true" width="25px" height="25px" />
                    </a>
                    @*@Html.DisplayFor(modelItem => item.Resim)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GirisTarihi)
                </td>
                <td>
                    <a class="btn btn-info text-white" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        let table = new DataTable('#myTable', {
            searching: false,
            "lengthChange": false,
            pageLength: 5,
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
            },
        });
    </script>
}